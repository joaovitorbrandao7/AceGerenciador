@page "/Produtos"
@model FrontAceGerenciador2.Pages.Produtos.ProdutosModel;

<h3 class="mt-5">Nossos produtos</h3>


<div>
    <table class="p-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].ProdutoId)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].Nome)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].Descricao)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].QuantidadeEmEstoque)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].QuantidadeVendida)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].Categoria)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].Preco)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoList[0].PrecoUnitarioVenda)</th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produtoModel in Model.ProdutoList)
            {
                <tr>
                    <td>@Html.DisplayTextFor(model => produtoModel.ProdutoId)</td>
                    <td>@Html.DisplayTextFor(model => produtoModel.Nome)</td>
                    <td>@Html.DisplayTextFor(model => produtoModel.Descricao)</td>
                    <td>@Html.DisplayTextFor(model => produtoModel.QuantidadeEmEstoque)</td>
                    <td>@Html.DisplayTextFor(model => produtoModel.QuantidadeVendida)</td>
                    <td>@Html.DisplayTextFor(model => produtoModel.Categoria)</td>
                    <td>@Html.DisplayTextFor(model => produtoModel.Preco)</td>
                    <td>@Html.DisplayTextFor(model => produtoModel.PrecoUnitarioVenda)</td>


                    <td class="borderNone">
                        <a asp-page="./Edit" asp-route-id="@produtoModel.ProdutoId" class="btn-edit">Alterar</a>
                        <a asp-page="./Details" asp-route-id="@produtoModel.ProdutoId" class="btn-details">Visualizar</a>
                        <a asp-page="./Delete" asp-route-id="@produtoModel.ProdutoId" class="btn-delete">Remover</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div class="mt-3">
        <a asp-page="/Produtos/Create" class="btn-create">+ Adicionar</a>

    </div>

</div>
