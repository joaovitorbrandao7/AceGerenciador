@page
@model FrontAceGerenciador2.Pages.Vendas.CreateModel
@{
    ViewData["Title"] = "Criar Nova Venda";
}

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-6">
            <div class="formEdit">
                <h3 class="">Vamos criar uma nova Venda?</h3>

                <form method="post">
                    <div class="form-group">
                        <label asp-for="VendaModel.ClienteId"></label>
                        <input asp-for="VendaModel.ClienteId" class="form-control" />
                        <span asp-validation-for="VendaModel.ClienteId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VendaModel.FuncionarioId"></label>
                        <input asp-for="VendaModel.FuncionarioId" class="form-control" />
                        <span asp-validation-for="VendaModel.FuncionarioId" class="text-danger"></span>
                    </div>

                    <!-- Adiciona um dropdown de produtos -->
                    <div class="form-group">
                        <label asp-for="ProdutoId"></label>
                        <select asp-for="ProdutoId" asp-items="Model.ProdutoSelectList" class="form-control"></select>
                        <span asp-validation-for="ProdutoId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Quantidade"></label>
                        <input asp-for="Quantidade" class="form-control" />
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" class="btn btn-create" value="Salvar" />
                        <a asp-page="Vendas" class="btn btn-delete">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6 bg-custom">
            <img src="~/images/worlds-smallest-dogs-1647336453.jpg" class="img-fluid" alt="Image Description">
        </div>
    </div>
</div>
